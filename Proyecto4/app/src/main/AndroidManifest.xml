<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.santi.proyecto4">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterUserActivity"
            android:label="Register user"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.REGISTRARUSUARIO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PRINCIPAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".principalActivity"
            android:label="Gremlin Store"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterProductActivity"
            android:label="Register product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchProductsActivity"
            android:label="Search product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateProductsActivity"
            android:label="Update product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeleteProductActivity"
            android:label="Delete product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateUsersActivity"
            android:label="Update Client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReportUserActivity"
            android:label="Report user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReportProductActivity"
            android:label="Report Product"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>