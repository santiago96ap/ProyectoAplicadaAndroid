<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.santi.proyecto4.ReportProductActivity"
    tools:showIn="@layout/activity_report_procduct">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="UselessLeaf">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:srcCompat="@drawable/logoplicada"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btnSearchProductReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40sp"
                android:background="@color/colorPrimaryDark"
                android:text="Load "
                android:textColor="@android:color/background_light"
                tools:ignore="HardcodedText" />

            <GridView
                android:id="@+id/gvProductsReport"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                android:layout_weight="0.88"
                android:contextClickable="false" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
