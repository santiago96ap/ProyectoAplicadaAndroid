<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.santi.proyecto4.ReportUserActivity"
    tools:showIn="@layout/activity_report_user">

    <ScrollView
        android:layout_width="402dp"
        android:layout_height="593dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="UselessLeaf">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/logoplicada"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btnSearchClientReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="40sp"
                android:background="@color/colorPrimaryDark"
                android:text="Load"
                android:textColor="@android:color/background_light"
                tools:ignore="HardcodedText" />

            <GridView
                android:id="@+id/gvReportUser"
                android:layout_width="364dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                android:textDirection="ltr"
                tools:ignore="InefficientWeight,NestedScrolling"
                android:layout_weight="0.73" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
